---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

const { filePath } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/nina-komel/src/assets/*.{jpeg,jpg,png,gif}'
);

if (!images[filePath])
  throw new Error(
    `"${filePath}" does not exist in glob: "/nina-komel/src/assets/*.{jpeg,jpg,png,gif,svg}"`
  );
---

<Image src={images[filePath]()} alt="image" class="block w-full" />
